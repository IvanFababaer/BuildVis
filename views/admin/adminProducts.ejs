<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Regular Datatables CSS -->
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Responsive Extension Datatables CSS -->
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet">

    <style>
        /* Styling overrides for Datatables and other custom styles */
        .dataTables_wrapper select,
        .dataTables_wrapper .dataTables_filter input {
            color: #4a5568;
            padding: .5rem 1rem;
            border-width: 2px;
            border-radius: .25rem;
            border-color: #edf2f7;
            background-color: #edf2f7;
        }
        table.dataTable.hover tbody tr:hover,
        table.dataTable.display tbody tr:hover {
            background-color: #ebf4ff;
        }
    </style>
</head>
<body class="bg-gray-100">

<!-- Sidebar -->
<aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg transform transition-transform duration-200 ease-in-out">
    <div class="flex items-center justify-between h-16 px-4 border-b">
        <h1 class="text-xl font-bold text-gray-800">Admin Panel</h1>
        <button id="closeSidebar" class="p-2 rounded-md lg:hidden hover:bg-gray-100">
            <i data-lucide="x" class="w-6 h-6"></i>
        </button>
    </div>
    <nav class="mt-4">
        <a href="/admin" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Dashboard</a>
        <a href="/adminUser" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Users</a>
        <a href="/adminProduct" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Products</a>
        <a href="/adminOrder" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Orders</a>
        <a href="/analytics" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Analytics</a>
        <a href="/logout" class="flex items-center px-4 py-3 text-gray-600 hover:bg-gray-100">Logout</a>
    </nav>
</aside>

<!-- Main Content -->
<div id="mainContent" class="lg:ml-64 min-h-screen">
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm">
        <div class="flex items-center justify-between h-16 px-4">
            <button id="openSidebar" class="p-2 rounded-md lg:hidden hover:bg-gray-100">
                <i data-lucide="menu" class="w-6 h-6"></i>
            </button>
        </div>
    </header>

    <main class="p-8">
        <div class="container w-full mx-auto px-2">
            <!-- Existing Table -->
            <div id="recipients" class="p-8 mt-6 rounded shadow bg-white">
                <table id="example" class="stripe hover" style="width:100%; padding-top: 1em; padding-bottom: 1em;">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Current Stock</th>
                            <th>Maximum Stock</th>
                            <th>Availability</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% product.forEach(pr => { %>
                        <tr>
                            <td><%= pr.product_id %></td>
                            <td><%= pr.name %></td>
                            <td><%= pr.price %></td>
                            <td><%= pr.current_stock %></td>
                            <td><%= pr.max_stock %></td>
                            <td><%= pr.availability %></td>
                            <td>
                                <button class="editBtn px-2 py-1 bg-blue-500 text-white rounded">Edit</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
    
            <!-- Add Product Form -->
            <div class="p-8 mt-8 rounded shadow bg-white">
                <h2 class="text-xl font-semibold mb-4">Add New Product</h2>
                <form action="/addProducts" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="productName" class="block text-sm font-medium text-gray-700">Product Name</label>
                        <input type="text" name="productName" id="productName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter product name" required>
                    </div>
                    <div class="mb-4">
                        <label for="productPrice" class="block text-sm font-medium text-gray-700">Price</label>
                        <input type="text" name="price" id="productPrice" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter price" required>
                    </div>
                    <div class="mb-4">
                        <label for="description" class="block text-sm font-medium text-gray-700">Product Description</label>
                        <input type="text" name="description" id="description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter product name" required>
                    </div>
                    <div class="mb-4">
                        <label for="current_stock" class="block text-sm font-medium text-gray-700">Current Stock</label>
                        <input type="text" name="current_stock" id="current_stock" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter current stock quantity" required>
                    </div>
                    <div class="mb-4">
                        <label for="max_stock" class="block text-sm font-medium text-gray-700">Maximum Stock</label>
                        <input type="text" name="max_stock" id="max_stock" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter maximum stock quantity" required>
                    </div>
                    <div class="mb-4">
                        <label for="imgPrd" class="block text-sm font-medium text-gray-700">Product upload image</label>
                        <input type="file" name="imgPrd" id="imgPrd" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter product name" required>
                    </div>
                    <div class="mb-4">
                        <label for="productCategory" class="block text-sm font-medium text-gray-700">Product Category</label>
                        <input type="text" name="category" id="productCategory" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Enter stock quantity" required>
                    </div>
                    <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-lg">Add Product</button>
                </form>
            </div>
        </div>
    </main>
    
</div>

<!-- Edit Modal -->
<div id="editModal" class="fixed inset-0 z-50 hidden bg-black bg-opacity-50 flex items-center justify-center">
    <form id="editForm" action="/editProduct" method="post">
        <div class="bg-white rounded-lg shadow-lg w-96 p-6">
            <h2 id="productName" class="text-xl font-semibold mb-4">Edit Product - <span id="modalProductName"></span></h2>
            <input type="hidden" id="productId" name="productId">
            <div class="mb-4">
                <label for="editPrice" class="block text-sm font-medium text-gray-700">Price</label>
                <input type="number" name="price" id="editPrice" min="0" step="0.01" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <p id="priceError" class="text-sm text-red-500 hidden">Please enter a valid price.</p>
            </div>
            <div class="mb-4">
                <label for="editCurrentStock" class="block text-sm font-medium text-gray-700">Current Stock</label>
                <input type="number" name="currentStock" id="editCurrentStock" min="0" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <p id="currentStockError" class="text-sm text-red-500 hidden">Current stock cannot exceed maximum stock.</p>
            </div>
            <div class="mb-4">
                <label for="editMaxStock" class="block text-sm font-medium text-gray-700">Maximum Stock</label>
                <input type="number" name="maxStock" id="editMaxStock" min="0" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" readonly>
                <div class="mt-2">
                    <label class="flex items-center space-x-2">
                        <input type="checkbox" id="editMaxStockToggle">
                        <span>Allow editing Maximum Stock</span>
                    </label>
                </div>
            </div>
            <div class="mb-4">
                <label for="editAvailability" class="block text-sm font-medium text-gray-700">Availability</label>
                <select name="availability" id="editAvailability" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    <option value="available">Available</option>
                    <option value="not_available">Not Available</option>
                </select>
            </div>
            <div class="flex justify-end">
                <button id="saveButton" class="px-4 py-2 bg-blue-500 text-white rounded-lg mr-2" type="submit" readonly>Save</button>
                <button id="closeModal" class="px-4 py-2 bg-gray-300 rounded-lg" type="button">Cancel</button>
            </div>
        </div>
    </form>
</div>



<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script>
    $(document).ready(function () {
        // Initialize DataTable immediately on page load
        const table = $('#example').DataTable({
            responsive: true,
            autoWidth: false // Prevent layout recalculation issues
        });

        // Event listener for Edit button
        $('#example tbody').on('click', 'button.editBtn', function () {
            const data = table.row($(this).parents('tr')).data();

            // Prefill modal with selected row data
            $('#productId').val(data[0]);
            $('#modalProductName').text(data[1]);
            $('#editPrice').val(data[2]);
            $('#editCurrentStock').val(data[3]);
            $('#editMaxStock').val(data[4]);
            $('#editAvailability').val(data[5]);

            // Open modal
            $('#editModal').removeClass('hidden');
        });

        // Modal Close
        $('#closeModal').on('click', function () {
            $('#editModal').addClass('hidden');
        });

        // Enable editing for Maximum Stock
        $('#editMaxStockToggle').on('change', function () {
            $('#editMaxStock').prop('readonly', !this.checked);
        });

        // Input validation
        function validateInputs() {
            let isValid = true;

            // Price validation
            const price = parseFloat($('#editPrice').val());
            if (isNaN(price) || price < 0) {
                $('#priceError').removeClass('hidden');
                isValid = false;
            } else {
                $('#priceError').addClass('hidden');
            }

            // Stock validation
            const currentStock = parseInt($('#editCurrentStock').val(), 10);
            const maxStock = parseInt($('#editMaxStock').val(), 10) || Infinity;
            if (currentStock > maxStock || isNaN(currentStock)) {
                $('#currentStockError').removeClass('hidden');
                isValid = false;
            } else {
                $('#currentStockError').addClass('hidden');
            }

            // Toggle save button
            $('#saveButton').prop('disabled', !isValid);
        }

        // Add listeners for validation
        $('#editPrice, #editCurrentStock, #editMaxStock').on('input', validateInputs);
    });

</script>

</body>
</html>
