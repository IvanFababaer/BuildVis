<%- include('partials/start') %>
<%- include('partials/nav') %>

<div class="flex justify-center items-center align-middle pb-24">
  <div class="grid grid-cols-1 gap-x-5 gap-y-10 sm:grid-cols-[30rem,1fr] w-[84%]">
    <div class="mt-40 items-center justify-center ">
      <form action="/updateProfile" method="post" class="bg-white p-8 rounded-lg shadow-lg w-full max-w-xl">
          <div>
            <p>Note: You will be required to login again after changes has been made.</p>
            <br>
          </div>
          <div class="mb-4">
            <input type="hidden" name="id" value="<%= user.id %>">
              <label for="username" class="block text-gray-700 font-semibold mb-2">Username:</label>
              <input 
                  type="text" 
                  name="username" 
                  id="username" 
                  value="<%= user.username %>" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
          </div>
          <div class="mb-4">
              <label for="email" class="block text-gray-700 font-semibold mb-2">Email:</label>
              <input 
                  type="email" 
                  name="email" 
                  id="email" 
                  value="<%= user.email %>" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
          </div>
          <button 
              type="submit" 
              class="w-full bg-indigo-500 text-white font-semibold py-2 rounded-lg hover:bg-indigo-600 transition-colors">
              Update Profile
          </button>
          <div class="mt-6 text-center">
              <p class="text-gray-600 mb-4">If you would like to update your password, click the button below:</p>
              <a 
                  href="/email-verification" 
                  class="inline-block bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg hover:bg-gray-300 transition-colors">
                  Reset Password
              </a>
          </div>
      </form> 
      <!-- billing -->
      <div class="max-w-xl p-4 bg-white shadow-lg rounded-md mt-2">
        <h3 class="text-xl font-semibold text-gray-700 mb-3">Billing Address</h3>
        <% billing.forEach(billing => { %>
          <br>
          <div class="p-3 bg-gray-100 rounded-md border">
            <p class="text-gray-600"><%= billing.fullname %> | <%= billing.contact %></p>
            <p class="text-gray-600"><%= billing.address %></p>
            <p class="text-gray-600"><%= billing.note %></p>
          </div>
      
          <div class="mt-4 text-right">
            <button class="px-4 py-2 text-white bg-indigo-600 rounded hover:bg-indigo-700">
              Edit Address
            </button>
          </div>
          <br>
          <hr>
        <% }) %>
      
        <div class="mt-4 text-center">
          <% if (billing.length === 0) { %> <!-- Render only if no billing address -->
            <button id="addNewAddressBtn" class="px-10 py-2 text-white bg-indigo-600 rounded hover:bg-indigo-700">
              Add New Address
            </button>
          <% } %>
        </div>
      </div>      
    </div>
    <div>
      <div class="max-w-4xl p-4 bg-white shadow-lg rounded-md mt-40">
        <h1 class="text-xl font-semibold">My Purchases</h1>
        <br>
        <div class="grid grid-cols-5">
          <a href="/profile?status=Pending" class="grid grid-rows-1 gap-2 border-solid border-2 py-2">
            <i class='bx bx-package text-3xl text-center'></i>
            <p class="text-center">Pending</p>
          </a>
          <a href="/profile?status=Pickup" class="grid grid-rows-1 gap-2 border-solid border-2 py-2">
            <i class='bx bx-package text-3xl text-center'></i>
            <p class="text-center">Ready For Pickup</p>
          </a>
          <a href="/profile?status=Out_for_delivery" class="grid grid-rows-1 gap-2 border-solid border-2 py-2">
            <div class="flex justify-center">
              <img src="..//cargo-truck.png" class="w-10 h-10 text-center" alt="">
            </div>
            <p class="text-center">Out for delivery</p>
          </a>
          <a href="/profile?status=Delivered" class="grid grid-rows-1 gap-2 border-solid border-2 py-2">
            <div class="flex justify-center">
              <img src="..//cargo-truck.png" class="w-10 h-10 text-center" alt="">
            </div>
            <p class="text-center">Delivered</p>
          </a>
          <a href="/profile?status=Rate" class="grid grid-rows-1 gap-2 border-solid border-2 py-2">
            <div class="flex justify-center">
              <img src="..//favorite.png" alt="" class="w-10 h-10 text-center">
            </div>
            <p class="text-center">To Rate</p>
          </a>
        </div>
      </div>
      <!-- <h1>i want to be a better fucking person</h1> -->
      <div class="bg-white rounded-lg shadow px-5 py-5 mt-2">
        <% if (orders.length > 0) { %>
          <% orders.forEach(orders => { %>
            <div>
              <div class="mt-10 grid grid-cols-[15rem,1fr,9rem] p-5 border-solid border-2 rounded-xl">
                <div class="productImage">
                  <img src="<%= orders.image_url %>" alt="" class="h-48 w-56">
                </div>
                <div class="description">
                  <div class="text-xl font-semibold"><%= orders.name %></div>
                  <div class="text-md font-medium pt-3">x<%= orders.quantity %></div>
                  <div class="text-md font-medium pt-3 pb-16"> &#8369;<%= orders.price %></div>
                  <div class="text-lg font-regular"> &#8369;<%= orders.totalPrice %></div>
                </div>
                <div>
                  <div class="text-lg font-small"><%= orders.status %></div>
                  <br>
                  <% if(orders.status == 'Delivered') { %>
                    <input type="hidden" name="productId" id="productId" value="<%= orders.product_id %>">
                    <button 
                      class="bg-green-500 text-white px-14 py-2 rounded hover:bg-green-600 mt-24 font-semibold order-again-btn" 
                      data-order-id="<%= orders.order_id %>">
                      Order Again
                    </button>
                  <% } else if(orders.status == 'Rate') { %>
                    <button 
                      class="bg-green-500 text-white px-14 py-2 rounded hover:bg-green-600 mt-24 font-semibold rate-btn" 
                      data-order-id="<%= orders.order_id %>">
                      Rate
                    </button>
                  <% } else if(orders.status == 'Out_for_delivery') { %>
                    <button 
                      class="bg-green-500 text-white px-12 py-2 rounded hover:bg-green-600 mt-24 font-semibold order-received-btn" 
                      data-order-id="<%= orders.order_id %>">
                      Order Received
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center text-gray-500 text-lg grid grid-rows-1 p-16">
            <div class="flex justify-center">
              <img src="..//clipboard-icon.png" alt="" class="w-20 h-20 text-center">
            </div>
            <div>No Orders Yet</div>
          </div>
        <% } %>
      </div>
    </div>
    <!-- Modal -->
    <div id="modal" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center hidden opacity-0 scale-95 transition-all duration-300">
        <div class="bg-white rounded-lg shadow-lg max-w-md w-full p-6">
            <h2 class="text-2xl font-bold mb-4">Add New Address</h2>
            <form id="billingForm" action="/add-billing-address" method="post">
                <div class="mb-4">
                    <label for="fullname" class="block text-gray-700 font-semibold mb-1">Full Name:</label>
                    <input type="text" name="fullname" placeholder="Enter Full Name" 
                          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="mb-4">
                    <label for="contact" class="block text-gray-700 font-semibold mb-1">Contact:</label>
                    <input type="text" name="contact" placeholder="Enter Contact" 
                          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="mb-4">
                    <label for="address" class="block text-gray-700 font-semibold mb-1">Address:</label>
                    <input type="text" name="address" placeholder="Enter Address" 
                          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="mb-4">
                    <label for="note" class="block text-gray-700 font-semibold mb-1">Note:</label>
                    <input type="text" name="note" placeholder="Additional Note" 
                          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="flex justify-end">
                    <button type="button" id="closeModalBtn" 
                            class="px-4 py-2 mr-2 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-4 py-2 text-white bg-indigo-600 rounded hover:bg-indigo-700">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
  </div>
</div>


<script type="module" src="..//script/script.js"></script>
<script>
  document.addEventListener('click', (event) => {
  if (event.target.matches('.order-again-btn')) {
    const orderId = event.target.dataset.orderId;
    const productId = document.getElementById('productId').value;
    console.log(productId);
    fetch('/order-again', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ orderId , productId })
    }).then(response => {
      if (response.ok) {
        alert('Order placed again!');
        window.location.href = '/cart'; // Redirect to confirmation page
      } else {
        alert('Failed to place order again.');
      }
    });
  }

  if (event.target.matches('.rate-btn')) {
    const orderId = event.target.dataset.orderId;
    fetch('/rate-order', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ orderId })
    }).then(response => {
      if (response.ok) {
        alert('Order rated successfully!');
      } else {
        alert('Failed to rate order.');
      }
    });
  }

  if (event.target.matches('.order-received-btn')) {
    const orderId = event.target.dataset.orderId;
    fetch('/mark-received', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ orderId })
    }).then(response => {
      if (response.ok) {
        alert('Order marked as received!');
      } else {
        alert('Failed to mark order as received.');
      }
    });
  }
});

</script>
